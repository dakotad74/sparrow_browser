<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sparrowwallet.sparrow.coordination.OutputProposalController"
            styleClass="output-proposal-step">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <Label text="Propose Transaction Outputs"
                   styleClass="step-title"/>

            <Label text="Add outputs to the coordinated transaction. All participants can propose outputs."
                   wrapText="true"
                   styleClass="instruction-text"/>

            <Separator/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <!-- Output Table -->
            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <Label text="Proposed Outputs:" styleClass="section-label"/>

                <TreeTableView fx:id="outputsTable" styleClass="outputs-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TreeTableColumn text="Proposed By" prefWidth="150"/>
                        <TreeTableColumn text="Address" prefWidth="300"/>
                        <TreeTableColumn text="Amount (BTC)" prefWidth="120"/>
                        <TreeTableColumn text="Label" prefWidth="150"/>
                    </columns>
                </TreeTableView>

                <Label fx:id="totalAmountLabel" text="Total: 0.00000000 BTC" styleClass="total-label"/>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10" styleClass="add-output-form">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <Separator/>

            <Label text="Add Your Output:" styleClass="section-label"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="addressField"
                          promptText="Enter Bitcoin address"
                          GridPane.columnIndex="0" GridPane.rowIndex="1"/>

                <Label text="Amount (BTC):" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <TextField fx:id="amountField"
                          promptText="0.00000000"
                          GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Label (optional):" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="labelField"
                          promptText="Label"
                          GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="addOutputButton" text="Add Output" styleClass="primary-button" onAction="#addOutput"/>
                <Button fx:id="removeOutputButton" text="Remove Selected" styleClass="secondary-button" disable="true" onAction="#removeOutput"/>
            </HBox>

            <Label fx:id="statusLabel" text="" styleClass="status-text"/>
        </VBox>
    </bottom>

</BorderPane>
