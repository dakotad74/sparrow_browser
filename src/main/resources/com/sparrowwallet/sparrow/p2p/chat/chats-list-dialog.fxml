<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sparrowwallet.sparrow.p2p.chat.ChatsListController"
            prefWidth="500" prefHeight="600">

    <!-- Title Bar -->
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                <Label text="My Conversations"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="refreshButton" text="Refresh"/>
            </HBox>
            <Separator/>
        </VBox>
    </top>

    <!-- Conversations List -->
    <center>
        <VBox>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Double-click to open chat">
                <padding>
                    <Insets bottom="10"/>
                </padding>
            </Label>

            <ListView fx:id="conversationsListView" VBox.vgrow="ALWAYS"/>

            <Label text="All messages are encrypted with NIP-04">
                <padding>
                    <Insets top="10"/>
                </padding>
            </Label>
        </VBox>
    </center>

    <!-- Bottom Buttons -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Button fx:id="closeButton" text="Close"/>
        </HBox>
    </bottom>

</BorderPane>
